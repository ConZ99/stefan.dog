{
    "swagger": "2.0",
    "info": {
        "description": "A proxy service that sanitizes BVG transport data",
        "title": "BVG Proxy API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/Arrivals/{stationID}": {
            "get": {
                "description": "Get upcoming arrivals for a station ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "arrivals"
                ],
                "summary": "Get arrivals",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Station ID",
                        "name": "stationID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/arrivals/new/{stationID}": {
            "get": {
                "description": "Get upcoming arrivals for a station ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "arrivals"
                ],
                "summary": "Get arrivals but with resty",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Station ID",
                        "name": "stationID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}